<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TabButton" parent="Widget.AppCompat.Button">
        <item name="textAllCaps">false</item>
        <item name="android:layout_height">@dimen/tab_height</item>
        <item name="android:textSize">@dimen/tab_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="buttonCompat">@android:color/transparent</item>
    </style>

    <style name="TabButton.TV">
        <item name="android:background">@drawable/btn_tv</item>
    </style>

    <style name="TabButton.Talk">
        <item name="android:background">@drawable/btn_talk</item>
    </style>

    <style name="TabButton.Spirit">
        <item name="android:background">@drawable/btn_spirit</item>
    </style>

    <style name="ArticleTitleTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
